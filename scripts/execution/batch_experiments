#!/bin/bash

if [ $# != 2 ] ; then
    echo "usage: batch_experiments PREFIX NAME"
    exit
fi

PREFIX="${1}"
NAME="${2}"
NEDIR=~/java/ne
GPATDEMOCFG=${NEDIR}/cfg/demo/gpatdemo.properties


function run {
    sed -i "" "1s/.*/INCLUDE = "${3}"\/"${4}"\.properties/" ${GPATDEMOCFG}
    ./nepackage ${1} ${PREFIX}"_"${4}_${NAME}
    ./runssh ${2}
}

run "GPAT" "kovarik:~/nepack1" "regression" "1D-1"
run "GPAT" "drchal:~/nepack2" "regression" "2D-1"
run "GPAT" "drchal:~/nepack3" "regression" "3D-1"
run "GPAT" "kovarik:~/nepack4" "regression" "4D-1"
run "GPAT" "drchal:~/nepack5" "maze" "maze-1"
run "GPAT" "drchal:~/nepack6" "maze" "maze-2"
